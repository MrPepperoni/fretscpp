void trydatadir(string td)
{
	if (datadir!="") return;
	MESSAGE("Looking for game data in: %s\n" &td);
	if (fileExists(td+"/default.ttf"))
	{
		datadir=td;
		MESSAGE("found!\n");
	}
}

void findvideomodes()
{
	tVideoMode tmp;
	int i;
	origmode=SDL_GetVideoInfo();
	tmp.bpp=origmode->vfmt->BitsPerPixel;
	
	videomodesdl=SDL_ListModes(NULL,SDL_FULLSCREEN|SDL_HWSURFACE);
	videomodes.push_back(tmp);
	videomodenames.push_back("Desktop");
	if (videomodesdl==(void *)-1)
	{
		MESSAGE("ANY RESOLUTION ok\n");
		return;
	}
	if (videomodesdl) for (i=0; videomodesdl[i]; i++)
	{
		MESSAGE("%d\n" &i);
		char a[32];
		tmp.width=videomodesdl[i]->w;
		tmp.height=videomodesdl[i]->h;
		sprintf(a,"%dx%dx%d",tmp.width,tmp.height,tmp.bpp);
		videomodes.push_back(tmp);
		videomodenames.push_back(a);
	}
}

